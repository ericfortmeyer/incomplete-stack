{
    "editor.minimap.enabled": false,
    "redhat.telemetry.enabled": false,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "files.autoSave": "afterDelay",
    "editor.codeLens": false,
    "editor.foldingImportsByDefault": true,
    "editor.trimWhitespaceOnDelete": true,
    "editor.quickSuggestions": {
        "comments": "on"
    },
    "editor.quickSuggestionsDelay": 1000,
    "files.insertFinalNewline": true,
    "files.readonlyFromPermissions": true,
    "files.simpleDialog.enable": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "workbench.cloudChanges.continueOn": "off",
    "workbench.editorLargeFileConfirmation": 3,
    "workbench.externalBrowser": "chrome",
    "workbench.remoteIndicator.showExtensionRecommendations": false,
    "workbench.editor.autoLockGroups": {
        "mainThreadWebview-markdown.preview": true
    },
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.value": 3,
    "window.closeWhenEmpty": true,
    "testing.alwaysRevealTestOnStateChange": true,
    "testing.coverageToolbarEnabled": true,
    "testing.followRunningTest": true,
    "scm.defaultViewMode": "tree",
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.defaultLocation": "editor",
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.suggest.runOnEnter": "always",
    "task.quickOpen.showAll": true,
    "problems.showCurrentInStatus": true,
    "telemetry.editStats.enabled": false,
    "telemetry.feedback.enabled": false,
    "git.alwaysSignOff": true,
    "git.autofetch": "all",
    "git.autoStash": true,
    "git.enableCommitSigning": true,
    "git.followTagsWhenSync": true,
    "html.format.indentInnerHtml": true,
    "html.format.templating": true,
    "intelephense.completion.propertyCase": "camel",
    "intelephense.rename.namespaceMode": "all",
    "chat.agent.enabled": false,
    "editor.renderWhitespace": "none",
    "editor.renderControlCharacters": false,
    "testing.resultsView.layout": "treeLeft",
    "workbench.startupEditor": "none",
    "git.confirmSync": false,
    "github.copilot.enable": {
        "*": false,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
    "intelephense.completion.suggestRelativeToPartialUseDeclaration": 2,
    "intelephense.diagnostics.noMixedTypeCheck": false,
    "intelephense.diagnostics.relaxedTypeCheck": false,
    "php.validate.run": "onType",
}
